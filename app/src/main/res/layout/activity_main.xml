<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    tools:context="com.example.ywn.escapeproject.MainActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:columnCount="3"
        android:rowCount="2"
        android:id="@+id/scanWin">

        <ImageView
            android:id="@+id/leftUpImg"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:layout_margin="5dp"
            app:layout_row="0"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1" />

        <ImageView
            android:id="@+id/middleUpImg"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:layout_margin="5dp"
            app:layout_row="0"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <ImageView
            android:id="@+id/rightUpImg"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:layout_margin="5dp"
            app:layout_row="0"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <ImageView
            android:id="@+id/leftDownImg"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:layout_margin="5dp"
            app:layout_row="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <ImageView
            android:id="@+id/middleDownImg"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:layout_margin="5dp"
            app:layout_row="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>

        <ImageView
            android:id="@+id/rightDownImg"
            android:layout_width="190dp"
            android:layout_height="140dp"
            android:scaleType="centerInside"
            android:clickable="true"
            android:layout_margin="5dp"
            app:layout_row="1"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>


    </GridLayout>


</RelativeLayout>
